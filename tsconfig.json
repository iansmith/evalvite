{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es6",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,

    "jsx": "react-jsx"
  },
  "include": [
    "."
  ],
  //"baseUrl": "./src",
  "exclude": ["node_modules", "**/__tests__/*", "lib", "deploy"]
}
